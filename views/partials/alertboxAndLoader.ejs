    <!-- alert notification -->
    <div id="alert_box">
        <div id="alert_box2">
            <p id="alert_msg">Hello, how are you?</p>
            <p id="alert_msg_cross">&times;</p>
        </div>
    </div>

    <style>
        #alert_box {
            display: inline;
            position: fixed;
            left: 50%;
            top: -150px;
            width: 100vw;
            padding: 0 10px;
            z-index: 100000000000000;
            transition: top 0.5s ease;
        }

        #alert_box2 {
            position: relative;
            padding: 8px 40px 8px 15px;
            transform: translateX(-50%);
            border-radius: 10px;
            max-width: 500px;
            min-width: 200px;
            width: fit-content;
        }

        #alert_msg {
            margin: 5px auto;
            font-size: 14px;
        }


        #alert_msg_cross {
        position: absolute;
        right: 7px;
        top: 0;
        margin: 1px;
        font-size: 23px;
        padding: 5px;
        cursor: pointer;
    }

    #alert_msg_cross:hover {
        color: black;
    }
    </style>


    <script nonce="<%-nonce%>">
        // Function to show the alert box with a dynamic message and background color
        function showAlert(alertMsg, type) {
            document.getElementById("alert_msg").textContent = alertMsg;
            if (type == "positive") {
                document.getElementById("alert_box2").style.backgroundColor = 'rgb(186, 248, 201)';
                document.getElementById("alert_box2").style.color = 'rgb(0, 133, 0)';
            }
            else {
                document.getElementById("alert_box2").style.backgroundColor = 'rgb(255, 204, 203)';
                document.getElementById("alert_box2").style.color = 'rgb(133, 0, 0)';
            }

            document.getElementById("alert_box").style.top = "20px";

            setTimeout(() => {
                document.getElementById("alert_box").style.top = "-150px";
            }, 5000);
        }

        document.getElementById("alert_msg_cross").addEventListener("click", function () {
            document.getElementById("alert_box").style.top = "-150px";
        });

        // showAlert('This is a custom alert message!', 'negative');

    </script>

