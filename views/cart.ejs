            <!-- cart items -->
            <section class="cart_section">
                <% if (typeof cartDetails !== 'undefined' && cartDetails.length> 0) { %>
                    <h2>Your items (<span class="total_cart_item_no"><%-totalCart%></span>)</h2>

                    <!-- total -->
