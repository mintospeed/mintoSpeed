<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - mintoSpeed</title>
     <!-- fav icon -->
     <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
     <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
     <link rel="shortcut icon" href="/favicon.ico" />
     <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
     <link rel="manifest" href="/favicon/site.webmanifest" />
   

    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700;800&display=swap"
        rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Khula:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <!-- google icon -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,0,0" />
    <!--Font awesome icon-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <script nonce="<%-nonce%>" src="https://kit.fontawesome.com/6ac775d87f.js" crossorigin="anonymous"></script>
    <!-- jQuery -->
    <script nonce="<%-nonce%>" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <style>
        * {
            box-sizing: border-box;
            scroll-behavior: smooth;
            font-family: 'Open Sans', sans-serif;
        }

        body {
            position: relative;
            padding: 0;
            margin: 0;
            background-color: rgb(243, 243, 243);
        }

        ul {
            list-style: none;
            padding-left: 0;
        }

        a {
            text-decoration: none;
            color: black;
        }

        h1,
        h2,
        h3,
        h4 {
            text-transform: capitalize;
        }

        .flex {
            display: flex;
        }

        .align-center {
            align-items: center;
        }

        .justify-center {
            justify-content: center;
        }

        .justify-around {
            justify-content: space-around;
        }

        .justify-between {
            justify-content: space-between;
        }

        button {
            cursor: pointer;
            border: none;
            padding: 8px 18px;
            font-size: 15px;
            background-color: rgb(0, 0, 0);
            color: white;
            border-radius: 20px;
        }
    </style>
</head>

<body>
    <!-- navbar -->
    <%- include('partials/navbar') %>

        <!-- alertboxAndLoader -->
        <%- include('partials/alertboxAndLoader') %>

            <!-- profile con -->

            <section class="pf_con">
                <div class="pf1">
                    <h2 class="pf_name">
                        <%=userData.name%>
                    </h2>
                    <p class="pf_email">
                        <%=userData.email%>
                    </p>
                    <p>
                        <%=userData.mob%>
                    </p>

                    <p>
                        <%=userData.streetAddress%>&nbsp;, <%=userData.pincode%>
                    </p>

                    <div class="lgbtn" id="lgbtn1" onclick="logout()">Logout</div>
                </div>

                <div class="pf11">
                    <div class="pf2 flex align-center">
                        <div class="pf21" id="pfCart">
                            <h3 class="pf21_h3">Your Cart</h3>
                            <p class="pf21_p">View now</p>
                        </div>

                        <div class="pf21" id="pfTrack">
                            <h3 class="pf21_h3">Track Order</h3>
                            <p class="pf21_p">Track now</p>
                        </div>

                        <div class="pf21" id="pfOrders">
                            <h3 class="pf21_h3">Your Orders</h3>
                            <p class="pf21_p">View now</p>
                        </div>

                        <div class="pf21" id="pfComplaint">
                            <h3 class="pf21_h3">Write Complaint</h3>
                            <p class="pf21_p">Write now</p>
                        </div>

                        <div class="pf21" id="pfFeedback">
                            <h3 class="pf21_h3">Give Feedback</h3>
                            <p class="pf21_p">Write now</p>
                        </div>
                    </div>

                </div>
                <!--info container -->

                <div class="info_con">
                    <div class="statusdiv">
                        <% if (pendingOrders && pendingOrders.length > 0) { %>

                        <h2 class="info_h2">pending orders (<%= pendingOrders.length %>)</h2>
                        <div class="tbcon">
                            <table class="table">
                                <thead>
                                    <th>Order on</th>
                                    <th>OrderId</th>
                                    <th>Total Items</th>
                                    <th>Total Price</th>
                                    <th>Delivery on</th>
                                    <th>Status</th>
                                    <th>View Detail</th>
                                </thead>
                                <tbody>
                                      <% pendingOrders.forEach(order=> { %>
                                        <tr>
                                            <td data-label="Order on"><%= order.orderTime %></td>
                                            <td data-label="orderId"><%= order.orderId %></td>
                                            <td data-label="Total Items"><%= order.totalItems %></td>
                                            <td data-label="Total Price">â‚¹<%= order.totalPrice %></td>
                                            <td data-label="Delivery on"><%= order.deliveryTime %></td>
                                            <td data-label="Status" class="status_td <%= order.status === 'cancelled' ? 'redBack' : order.status === 'completed' ? 'greenBack' : 'blackBack' %>"><%= order.status %></td>
                                            <td data-label="View Detail"><a href="/order-details?orderId=<%= order.orderId %>">Click here</a></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } %>
                    </div>
                </div>
                
                <div class="pf3 lgbtn" onclick="logout()">Logout</div>
            </section>


            <script nonce="<%-nonce%>">
                $(document).ready(function () {
                    $('#pfCart').click(function () {
                        window.location.href = '/cart';
                    });
                    $('#pfTrack').click(function () {
                        window.location.href = '/track';
                    });
                    $('#pfOrders').click(function () {
                        window.location.href = '/orders';
                    });
                    $('#pfComplaint').click(function () {
                        window.location.href = '/complaint';
                    });

                    $('#pfFeedback').click(function () {
                        window.location.href = '/feedback';
                    });


                });
            </script>

            <style>
                div.info_con {
                    margin-top: 90px;
                    padding: 20px;
                }

                .tbcon {
                    width: 100%;
                    overflow-x: auto;
                }

                .info_h2 {
                    font-size: 16px;
                    margin-bottom: 20px;
                }

                .table {
                    width: 100%;
                    border-collapse: collapse;
                }

                .table td,
                .table th {
                    word-wrap: break-word;
                    padding: 12px 15px;
                    border: 1px solid #c0c0c0;
                    text-align: center;
                    font-size: 13px;
                }

                .table td,
                .table th {
                    min-width: 50px;
                    max-width: 250px;
                }

                .table th {
                    font-size: 13px;
                    background-color: rgb(148, 211, 130);
                    color: #000000;
                }

                .table tbody tr:nth-child(even) {
                    background-color: #ececec;
                }

                .status_td{
                    text-transform: capitalize;
                }

                .status_td::before {
                    font-family: 'Font Awesome 5 Free';
                    font-weight: 900;
                    font-size: 13px;
                    margin-right: 5px;
                }

                .greenBack{
                    color: green;
                }
                .redBack{
                    color: red;
                }
                .blackBack{
                    color: black;
                }
                .greenBack::before{
                    content: '\f560';
                    color: green;
                }
                .blackBack::before{
                    content: '\f110';
                    color: black;
                }
                .redBack::before{
                    content: '\f057';
                    color: red;
                }


                @media (max-width: 700px) {
                    .table thead {
                        display: none;
                    }

                    .table td,
                    .table th {
                        min-width: 150px;
                        max-width: 100%;
                    }

                    .table tr,
                    .table td {
                        display: block;
                        width: 100%;
                    }

                    .table tr {
                        margin-bottom: 15px;
                        background-color: white;
                    }

                    .table tbody tr:nth-child(even) {
                    background-color: white;
                    }

                    .table td {
                        padding-left: 40%;
                        text-align: left;
                        position: relative;
                    }

                    .table td::before {
                        content: attr(data-label);
                        position: absolute;
                        left: 0;
                        width: 40%;
                        padding-left: 15px;
                        font-size: 13px;
                        font-weight: 700;
                        text-align: left;
                        font-family: 'Open Sans', sans-serif;
                    }
                }

                section.pf_con {
                    position: relative;
                    width: 100%;
                    height: fit-content;
                    overflow-x: hidden;
                }

                div.pf1 {
                    position: relative;
                    display: block;
                    padding: 45px 60px;
                    height: 300px;
                    background-image: linear-gradient(117deg, rgb(167, 241, 146) 39.2%, rgb(227, 251, 222) 156.2%);
                }

                .lgbtn {
                    cursor: pointer;
                    padding: 10px 35px;
                    color: white;
                    background-color: black;
                    font-weight: 700;
                    border-radius: 10px;
                }

                #lgbtn1 {
                    position: absolute;
                    top: 80px;
                    right: 50px;
                }

                .pf_name {
                    font-size: 31px;
                    margin: 10px 0;
                }

                .pf1>p {
                    margin: 8px 0;
                }

                div.pf11 {
                    width: 100%;
                    position: absolute;
                    top: 230px;
                    left: 0;
                }

                div.pf2 {
                    flex-wrap: wrap;
                    width: 100%;
                }

                div.pf21 {
                    user-select: none;
                    cursor: pointer;
                    position: relative;
                    padding: 15px 27px 25px 27px;
                    height: 110px;
                    width: calc(18% - 34px);
                    min-width: 250px;
                    margin: 0 12px 30px;
                    background-color: rgb(255, 255, 255);
                    border-radius: 30px;
                    box-shadow: 0 5px 4px -4px rgba(57, 76, 96, .15);
                }

                div.pf21::after {
                    position: absolute;
                    top: 35px;
                    right: 25px;
                    font-size: 15px;
                    content: "\f078";
                    font-family: "Font Awesome 6 Free";
                    font-weight: 700;
                    color: rgb(70, 70, 70);
                }

                .pf21_p {
                    margin: 0px 5px;
                    font-size: 13px;
                    color: rgb(70, 70, 70);
                }

                .pf21_h3 {
                    margin-left: 5px;
                    font-weight: 700;
                    font-size: 16px;
                }

                div.pf3 {
                    display: none;
                    margin: 50px 20px 20px;
                    text-align: center;
                }

                @media screen and (max-width: 1435px) {
                    div.pf21 {
                        width: calc(20% - 34px);
                    }
                }

                @media screen and (max-width: 1135px) {
                    div.pf21 {
                        width: calc(30% - 34px);
                    }

                    div.info_con {
                        margin-top: 190px;
                    }
                }

                @media screen and (max-width: 850px) {
                    div.pf3 {
                        display: block;
                    }

                    #lgbtn1 {
                        display: none;
                    }

                    div.pf1 {
                        padding: 40px 30px;
                    }

                    div.pf21 {
                        width: calc(100% - 30px);
                        margin: 0 15px;
                        border-radius: 0px;
                        height: 90px;
                        padding: 4px 20px;
                    }

                    div.pf21:nth-child(1) {
                        border-radius: 20px 20px 0 0;
                    }

                    div.pf21:last-child {
                        border-radius: 0 0 20px 20px;
                    }

                    div.info_con {
                        margin-top: 400px;
                    }
                }

                @media screen and (max-width: 550px) {
                    .pf_name {
                        font-size: 21px;
                    }

                    div.info_con {
                        margin-top: 400px;
                        padding: 10px;
                    }

                    div.pf1 {
                        display: block;
                        padding: 30px 0 30px 5%;
                        height: 250px;
                    }

                    div.pf11 {
                        top: 200px;
                    }

                    div.pf21::after,
                    .pf21_h3 {
                        font-size: 15px;
                    }

                    .pf21_p {
                        margin: 8px 5px;
                        font-size: 13px;
                    }
                }
            </style>



</body>

</html>